package:graphql
class:CategoriesSpec
scenario:Retrieving all categories by search parameter

request:
"""
query searchCategories {
  searchCategories(name: <search>) {
    id
    name
  }
}
"""

response:
"""
{
  "data": {
    "searchCategories": [
      {
        "id": <id>,
        "name": <name>
      },
      {
        "id": <id>,
        "name": <name>
      },
      {
        "id": <id>,
        "name": <name>
      }
    ]
  }
}
"""

